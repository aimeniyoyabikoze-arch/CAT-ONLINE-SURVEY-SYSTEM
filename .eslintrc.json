{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "ignorePatterns": ["**/*.test.js", "node_modules/", "public/", "frontend/", "dist/", "coverage/", "k8s/", "monitoring/", "*.config.js"]
}
