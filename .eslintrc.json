{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "ignorePatterns": ["node_modules/", "frontend/", "dist/", "coverage/"],
  "overrides": [
    {
      "files": ["public/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
